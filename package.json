{
    "name": "scummc",
    "displayName": "ScummC",
    "description": "Syntax highlighting and snippets for ScummC",
    "version": "0.1.6",
    "publisher": "idleberg",
    "license": "MIT",
    "author": {
        "name": "Jan T. Sott",
        "url": "http://github.com/idleberg"
    },
    "keywords": [
        "scumm c",
        "scumm vm",
        "scumm",
        "scummc",
        "scummvm"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/idleberg/vscode-scummc.git"
    },
    "homepage": "https://github.com/idleberg/vscode-scummc",
    "bugs": {
        "url": "https://github.com/idleberg/vscode-scummc/issues"
    },
    "icon": "images/logo.png",
    "galleryBanner": {
        "color": "#bd539a",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Languages",
        "Snippets"
    ],
    "contributes": {
        "languages": [
            {
                "id": "scummc",
                "aliases": [
                    "ScummC",
                    "scummc"
                ],
                "extensions": [
                    ".scc",
                    ".sch"
                ],
                "configuration": "./scummc.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "scummc",
                "scopeName": "source.c.scumm",
                "path": "./syntaxes/scummc.tmLanguage"
            }
        ],
        "snippets": [
            {
                "language": "scummc",
                "path": "./snippets/scummc.json"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "vscode-linter",
        "vscode:prepublish": "gulp"
    },
    "devDependencies": {
        "gulp": "^4.0.0",
        "gulp-raster": "^0.2.0",
        "gulp-rename": "^1.2.2",
        "vscode": "^1.0.10",
        "vscode-linter": "^0.1.0"
    }
}